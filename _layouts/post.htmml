---
layout: default
---

<article class="post">

  {% if page.image %}
  <div class="post-header">
    <img src="/assets/images/blog/{{page.image}}" alt="{{ page.image_legend }}">
    {% if page.image_legend %}
    <p>
      {{ page.image_legend }}
    </p>
    {% endif %}
  </div>
  {% endif %}
  {{ content }}
</article>
